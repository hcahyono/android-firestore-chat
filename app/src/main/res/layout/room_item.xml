<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/roomRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/roomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Hendro Steven"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roomDescription"
            android:layout_below="@+id/roomName"
            android:layout_alignLeft="@id/roomName"
            android:paddingVertical="2dp"
            android:elevation="2dp"
            android:textSize="14dp"
            android:text="How are you doing? This is a long message that should probably wrap."
            />

    </LinearLayout>


</RelativeLayout>